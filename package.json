{
  "name": "@mkven/xml-parser",
  "version": "0.2.4",
  "description": "Opinionated XML parsing utilities with ZIP archive support",
  "author": "Damir Manapov",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "fast-xml-parser": "^5.3.7",
    "unzipper": "^0.12.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "@release-it/conventional-changelog": "^10.0.5",
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^25.3.0",
    "@types/unzipper": "^0.10.11",
    "release-it": "^19.2.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "scripts": {
     "build": "tsc && tsc -p tsconfig.cjs.json && node -e \"require('fs').writeFileSync('dist/cjs/package.json', JSON.stringify({type:'commonjs'}))\"",
    "lint": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "release": "release-it",
    "release:dry": "release-it --dry-run"
  }
}
